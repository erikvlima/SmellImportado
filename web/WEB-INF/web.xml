<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>usuarios</servlet-name>
        <servlet-class>cdc.controller.ServletUsuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>cdc.controller.ServletLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>produtos</servlet-name>
        <servlet-class>cdc.controller.ServletProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>clientes</servlet-name>
        <servlet-class>cdc.controller.ServletCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>promocao</servlet-name>
        <servlet-class>cdc.controller.ServletPromocao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>produtoPromocao</servlet-name>
        <servlet-class>cdc.controller.ServletProdutoPromocao</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PesquisaProduto</servlet-name>
        <servlet-class>cdc.controller.ServletPesquisaProduto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MostraProdutoCompra</servlet-name>
        <servlet-class>cdc.controller.ServletMostraProdutoCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MontaCompra</servlet-name>
        <servlet-class>cdc.controller.ServletTelaPrincipal</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ItemCompra</servlet-name>
        <servlet-class>cdc.controller.ServletItemCompra</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Carrinho</servlet-name>
        <servlet-class>cdc.controller.ServletCarrinho</servlet-class>
    </servlet>    
    <servlet>
        <servlet-name>ExcluiDoCarrinho</servlet-name>
        <servlet-class>cdc.controller.ServletCarrinho</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>usuarios</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>clientes</servlet-name>
        <url-pattern>/clientes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>produtos</servlet-name>
        <url-pattern>/produtos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>promocao</servlet-name>
        <url-pattern>/promocao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>produtoPromocao</servlet-name>
        <url-pattern>/produtoPromocao</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PesquisaProduto</servlet-name>
        <url-pattern>/PesquisaProduto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MostraProdutoCompra</servlet-name>
        <url-pattern>/MostraProdutoCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MontaCompra</servlet-name>
        <url-pattern>/MontaCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ItemCompra</servlet-name>
        <url-pattern>/ItemCompra</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Carrinho</servlet-name>
        <url-pattern>/Carrinho</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ExcluiDoCarrinho</servlet-name>
        <url-pattern>/ExcluiDoCarrinho</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/erro.jsp</location>
    </error-page>
</web-app>
